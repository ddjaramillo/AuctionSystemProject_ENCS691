@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@page "/"
<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>

        <h1>Hello, @context.User.Identity?.Name!</h1>
        Welcome to your new app, thanks for authenticate yourself!

    </Authorized>
    <NotAuthorized>
        
        <h1>Hello</h1>!
        Welcome to your new app, to see more, authenticate!


    </NotAuthorized>
</AuthorizeView>
